 
/**index.wxss**/

.container {
  background-color: #F2f2f2;
  min-height: 100%;
}
.swiper-container{
  width: 750rpx;
  margin-top: 100rpx;
  position: relative;  
}
.swiper_box {
  width: 100%;
  background: white;
  height:330rpx;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height:330rpx;
}
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #fff;  
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .5;
}  
.swiper-container .dots .dot.active{  
  width: 14rpx;  
  opacity: 1;
}

.type-navbar{
  white-space: nowrap;
  height: 88rpx;
  width: 100%;
  background-color: #fff;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.type-box{
  width:160rpx;
  box-sizing: content-box;
  font-size: 30rpx;
  line-height: 84rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}
.type-navbar-item{
  border-bottom: 4rpx solid #fff;
}
.type-item-on{
  border-bottom: 4rpx solid #e64340;
}

.goods-container{
  display: flex;
  justify-content: space-between;  
  flex-wrap:wrap;
  box-sizing: content-box;
  padding: 14rpx;
}

.goods-box{
  width: 360rpx;
  height: auto;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 10rpx;
}
.goods-box .img-box image{
  width: 360rpx;
  height: 360rpx;
  overflow: hidden;
}

.goods-box .goods-title{
  overflow: hidden;  
  display: -webkit-box;  
  -webkit-line-clamp: 2;  
  -webkit-box-orient: vertical;  

  width: 310rpx;
  word-break:break-all;
  font-size: 11pt;
  padding: 10rpx 0 0 0;
  color:#000;
  margin-left: 24rpx;
}

.goods-subtitle{
  width: 280rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 30rpx;
  padding: 5rpx 0 0 0;
  color:gray;
  margin-left: 24rpx;
}
.money-class{
  position: relative;
  display:flex; 
  margin: 30rpx 20rpx;
   align-items: baseline;
  vertical-align:text-bottom;
  color:#e64340;
}
.goods-box .goods-y{
  position: relative;
  width: auto;
  font-size: 10pt;
}
.goods-box .goods-price{
  width: auto;
  margin-left: 5rpx;
  margin-bottom: 2rpx;
  font-size: 12pt;
}
.goods-box .goods-unit{
  width: auto;
  font-size: 10pt;
}


