
.container {
  height: 100vh;
  background-color: #e7e7e7;
  display: flex;
  flex-direction: column;
}

.userinfo {
	display: flex;
	flex-direction: column;
	padding: 50rpx 0;
	align-items: center;
	background: #e85654;
  width: 750rpx;
}

.userinfo-avatar {
	width: 160rpx;
	height: 160rpx;
	margin: 20rpx;
	border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 20rpx;
  color: #FFF;
}

.item {
  border-bottom: 1rpx solid #e7e7e7;
  width: 750rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.icon {
  width: 50rpx;
  height: 50rpx;
  margin: 30rpx 40rpx;
}
.font_middle{
  font-size: 12pt;
}

.margin-20{
  margin-top: 20rpx;
}